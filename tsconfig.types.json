{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "noEmit": false,
    "declarationMap": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.stories.*",
    "**/*.test.*",
    "**/__tests__/**",
    ".storybook",
    "dist",
    "src/main.tsx",
    "src/App.tsx"
  ]
}